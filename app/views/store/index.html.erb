<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<!--<h1>Your Pragmatic Catalog</h1>-->
<h1><%= t('.title_html')%></h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <p><%= sanitize(product.description) %></p>
    <div class="price_line">
<!-- START:currency -->
      	<span class="price"><%= number_to_currency(product.price) %></span>
<!-- START_HIGHLIGHT -->
    <%if session[:user_id] == nil or User.find_by_id(session[:user_id]).identity == "customer" %>
		  <%= button_to t('.add_html'), line_items_path(product_id: product),
			   remote: true %>
    <% else %>
      <%= button_to 'Edit', edit_product_path(id: product), method: :get %>
      <%= button_to 'Delete', product_path(id: product), method: :delete %>
    <% end %>
      <!--<%= button_to 'Add to Cart', line_items_path(product_id: product),
		remote: true %>-->
<!-- END_HIGHLIGHT -->
<!-- END:currency -->
    </div>
  </div>
<% end %>

<% if session[:user_id] != nil and User.find_by_id(session[:user_id]).identity == "seller" %>
  <div class="button_publish">
  <%= button_to 'Publish New Product', new_product_path, method: :get %>
  </div>
<% end %>