<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<!--<h1>Your Pragmatic Catalog</h1>-->
<h1><%= t('.title_html')%></h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= link_to(image_tag(product.image_url),product_path(id: product.id), method: :get )%>
    <h3><%= link_to(product.title, product_path(id: product.id), method: :get )%></h3>
    <p><%= truncate(strip_tags(product.description), length: 120) %></p>
    <div class="price_line">
<!-- START:currency -->
      	<span class="price"><%= number_to_currency(product.price) %></span>
<!-- START_HIGHLIGHT -->
		<%= button_to t('.add_html'), line_items_path(product_id: product),
			remote: true %>
      <!--<%= button_to 'Add to Cart', line_items_path(product_id: product),
		remote: true %>-->
<!-- END_HIGHLIGHT -->
<!-- END:currency -->
    </div>
  </div>
<% end %>
